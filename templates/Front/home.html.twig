{% extends 'layout.html.twig' %}

{% block page_classes %}home-page{% endblock %}

{% block content %}
    <div class="form">
        <div class="background">
            <img src="/media/search-background.jpg">
        </div>
        <div class="content">
            <h1>Rechercher une entreprise</h1>

            {{ form_start(searchForm) }}
                <div class="search-form">
                    <div class="input">
                        {{ form_row(searchForm.text) }}
                    </div>
                    <div class="action">
                        <a href="#" id="search-form-submit">
                            <i class="fa fa-search"></i>
                        </a>
                    </div>

                </div>
            {{ form_end(searchForm) }}
        </div>
    </div>
{% endblock %}
